{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: "Resource"|t('hubspot'),
    id: 'object',
    name: 'object',
    value: field.object,
    errors: field.getErrors('object'),
    required: true
}) }}

{% block minField %}
    {{ forms.textField({
        label: "Minimum {type}"|t('app', { type: field.displayName() }),
        instructions: "Minumum number of selectable {type}."|t('app', { type: field.displayName() }),
        id: 'min',
        name: 'min',
        value: field.min,
        size: 2,
        errors: field.getErrors('min')
    }) }}
{% endblock %}

{% block maxField %}
    {{ forms.textField({
        label: "Maximum {type}"|t('app', { type: field.displayName() }),
        instructions: "Maximum number of selectable {type}."|t('app', { type: field.displayName() }),
        id: 'max',
        name: 'max',
        value: field.max,
        size: 2,
        errors: field.getErrors('max')
    }) }}
{% endblock %}

{% block selectionLabelField %}
    {{ forms.textField({
        label: "Selection Label"|t('app'),
        instructions: "Enter the text you want to appear on the {type} selection input."|t('app', { type: field.displayName() }),
        id: 'selectionLabel',
        name: 'selectionLabel',
        value: field.selectionLabel,
        placeholder: field.defaultSelectionLabel(),
        errors: field.getErrors('selectionLabel')
    }) }}
{% endblock %}

{% block advanced %}
    <hr/>
    <a class="fieldtoggle" data-target="advanced">{{ "Advanced"|t('app') }}</a>
    <div id="advanced" class="hidden">
        {% block viewUrlField %}
            {{ forms.textField({
                label: "HubSpot Resource View Url"|t('hubspot'),
                instructions: "The following variables are available: {{ hubId }}, {{ object }}, {{ id }}"|t('hubspot'),
                id: 'viewUrl',
                name: 'viewUrl',
                class: 'code',
                value: field.viewUrl,
                errors: field.getErrors('viewUrl')
            }) }}
        {% endblock %}

        {% block listUrlField %}
            {{ forms.textField({
                label: "HubSpot Resource Listing Url"|t('hubspot'),
                instructions: "The following variables are available: {{ hubId }}, {{ object }}"|t('hubspot'),
                id: 'listUrl',
                name: 'listUrl',
                class: 'code',
                value: field.listUrl,
                errors: field.getErrors('listUrl')
            }) }}
        {% endblock %}
    </div>
{% endblock %}


